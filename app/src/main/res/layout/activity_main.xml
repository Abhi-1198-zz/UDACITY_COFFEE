<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.starbuckscoffee.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg6"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sb"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What\'s Would you like to have today?"
        android:textColor="#FFFF"
        android:layout_below="@+id/logo"
        android:textSize="20sp"/>
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="180dp">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/frap"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/frappucino"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp" />

            <ImageView
                android:id="@+id/ilatte"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/icedlatte"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/dcfrap"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/delishtriplecoffeefrappuccino"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/bfrap"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/brigadeiro_frappuccino"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/vscream"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/vanillasweetcream"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/unicornfrappuccino"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/widget38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="108px"
        android:layout_y="87px"
        android:layout_below="@+id/hsv"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        >
        <View android:id="@+id/separator"
            android:background="#ffffff"
            android:layout_width = "fill_parent"
            android:layout_height="3dp"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/widget39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/widget38">
    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:text="YOUR BILL SUMMARY"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtotal"
        android:layout_below="@+id/summary"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/gst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GST= 14%"
        android:layout_below="@+id/subtotal"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalbill"
        android:text="Final Amount = "
        android:layout_below="@+id/gst"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_margin="8dp"/>
</RelativeLayout>
</RelativeLayout>
